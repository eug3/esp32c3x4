# Minimal defaults to enable BT + NimBLE for ESP32-C3
CONFIG_BT_ENABLED=y
CONFIG_BT_NIMBLE_ENABLED=y
CONFIG_BT_CONTROLLER_ENABLED=y
CONFIG_BT_BLUEDROID_ENABLED=n
CONFIG_BT_NIMBLE_MEM_ALLOC_MODE_INTERNAL=y
CONFIG_BT_NIMBLE_LEGACY_VHCI_ENABLE=y
CONFIG_BT_CTRL_HCI_MODE_VHCI=y
CONFIG_BT_CTRL_HCI_TL=1
CONFIG_BT_CTRL_MODE_EFF=1
CONFIG_BT_CTRL_PINNED_TO_CORE=0
# Optional: lower NimBLE log level to reduce console noise
CONFIG_BT_NIMBLE_LOG_LEVEL_INFO=y
